{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/auth/[kindeAuth]/route.js",
    "auth.config.js",
    "components/Navbar.jsx",
    "components/UserDropdown.jsx",
    "app/(other)/new-user/page.jsx",
    "app/(home)/page.jsx",
    "components/acertinity_ui/input.jsx",
    "components/magic_ui/NumberTicker.jsx",
    "components/acertinity_ui/sparkles.jsx",
    "components/ClientNavbar.jsx",
    "app/(home)/layout.jsx",
    "components/acertinity_ui/shooting-stars.jsx",
    "lib/utils.js",
    "components/acertinity_ui/select.jsx",
    "components/acertinity_ui/bento-grid.jsx"
  ],
  "exclude": ["node_modules"]
}
